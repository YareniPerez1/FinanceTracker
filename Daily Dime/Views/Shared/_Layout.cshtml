<body>
    <div>
        @await Html.PartialAsync("_SideBar")

        <div class="main-content">
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3 navbar-shifted">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Daily_Dime</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>

            <div class="container mt-3">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toggleButton = document.getElementById('sidebarToggle');
            const sidebar = document.querySelector('.sidebar-fixed');
            const mainContent = document.querySelector('.main-content');
            const sidebarLabels = document.querySelectorAll('.sidebar-label'); // <-- Select all labels

            toggleButton.addEventListener('click', function () {
                sidebar.classList.toggle('sidebar-collapsed');
                mainContent.classList.toggle('main-content-collapsed');

                // Hide or show the labels based on sidebar state
                sidebarLabels.forEach(label => {
                    if (sidebar.classList.contains('sidebar-collapsed')) {
                        label.style.display = 'none'; // Hide labels
                    } else {
                        label.style.display = 'block'; // Show labels
                    }
                });

                // Change the toggle button symbol
                if (sidebar.classList.contains('sidebar-collapsed')) {
                    toggleButton.innerHTML = '&raquo;'; // >>
                } else {
                    toggleButton.innerHTML = '&laquo;'; // <<
                }
            });
        });
    </script>

  

    
