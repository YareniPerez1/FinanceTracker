@{
    ViewData["Title"] = "Home Page";
    
    ViewData["HideSidebar"] = true;

}



<div class="widget  text-white">
    <div class="container px-4 py-5">
        <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
            <!-- Image section shifted left -->
            <div class="col-12 col-lg-6 text-center text-lg-end">
                <img src="~/CoverImage.jpeg"
                     class="img-fluid shadow-lg"
                     style="max-width: 550px; border-radius: 2rem; margin-right: 30px;"
                     alt="Cover Image" />
            </div>

            <!-- Text and button section -->
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold lh-1 mb-4 text-white">Make every <span style="color: #7ed957;">Dime</span> count</h1>
                <p class="lead fs-4 text-white mb-4">
                    Track your spending with custom categories and clear insights.
                </p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <a asp-area="Identity" asp-page="/Account/Register"
                       class="btn btn-primary px-4 rounded-pill d-flex align-items-center justify-content-center"
                       style="height: 60px; font-size: 1.25rem; background-color: #7ed957;">
                        Get Started
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
    <!-- Feature 1 -->
    <div class="feature col">
        <div class="widget p-4 h-100 text-white">
            <div class="feature-icon d-inline-flex align-items-center justify-content-center fs-1 mb-3">
                <i class="bi bi-bar-chart"></i>
            </div>
            <h3 class="fs-2">Visual Reports</h3>
            <p>See your income and expenses visualized through interactive charts.</p>
            <a href="#" class="icon-link text-white">
                Get Started <i class="bi bi-chevron-right"></i>
            </a>
        </div>
    </div>

    <!-- Feature 2 -->
    <div class="feature col">
        <div class="widget p-4 h-100 text-white">
            <div class="feature-icon d-inline-flex align-items-center justify-content-center fs-1 mb-3">
                <i class="bi bi-people"></i>
            </div>
            <h3 class="fs-2">User Management</h3>
            <p>Manage your profile and user-specific data securely and easily.</p>
            <a href="#" class="icon-link text-white">
                Get Started <i class="bi bi-chevron-right"></i>
            </a>
        </div>
    </div>

    <!-- Feature 3 -->
    <div class="feature col">
        <div class="widget p-4 h-100 text-white">
            <div class="feature-icon d-inline-flex align-items-center justify-content-center fs-1 mb-3">
                <i class="bi bi-sliders2"></i>
            </div>
            <h3 class="fs-2">Customization</h3>
            <p>Personalize charts and preferences without changing your data.</p>
            <a href="#" class="icon-link text-white">
                Get Started <i class="bi bi-chevron-right"></i>
            </a>
        </div>
    </div>
</div>


<div class="pricing-header p-3 pb-md-4 mx-auto text-center"> <h1 class="display-4 text-white">Pricing</h1> 
    <p class="fs-5 text-white">Choose a plan that meets your tracking needs!</p> </div>

<main>
    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center text-white bg-transparent">

        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm bg-transparent border-white text-white">
                <div class="card-header py-3 bg-transparent border-white">
                    <h4 class="my-0 fw-normal">Free</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">$0<small class="text-white">/mo</small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>Customized spending and income categories</li>
                        <li>Categorized transactions</li>
                        <li>Visualizations</li>
                        <li>Help center access</li>
                    </ul>
                @*     <button type="button" class="w-100 btn btn-lg btn-outline-light">Sign up for free</button> *@
                    <a href="/Identity/Account/Register" class="w-100 btn btn-lg btn-outline-light">Sign up for free</a>

                </div>
            </div>
        </div>

        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm bg-transparent border-white text-white">
                <div class="card-header py-3 bg-transparent border-white">
                    <h4 class="my-0 fw-normal">Pro - Coming Soon</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">$10<small class="text-white">/mo</small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>Reccuring Transactions</li>
                        <li>Budegt goals for each category</li>
                        <li>App notifcations</li>
                        <li>Family Sharing</li>
                  
                    </ul>
                    <button type="button" class="w-100 btn btn-lg btn-outline-light">Coming soon</button>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm bg-transparent border-white text-white">
                <div class="card-header py-3 bg-transparent border-white">
                    <h4 class="my-0 fw-normal">Enterprise - Coming Soon</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">$15<small class="text-white">/mo</small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>sharable dashboards</li>
                        <li>Ai suggested savings</li>
                        <li>Data Export</li>
                        <li>Bank Integration</li>
                    </ul>
                    <button type="button" class="w-100 btn btn-lg btn-outline-light">Coming soon</button>
                </div>
            </div>
        </div>

    </div>
</main>










