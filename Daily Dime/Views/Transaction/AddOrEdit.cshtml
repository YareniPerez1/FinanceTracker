@model FTDataAccess.Models.Transaction

@{
    ViewData["PageTitle"] = Model.TransactionId == 0 ? "Create a new transaction" : "Edit transaction";
}



<nav style="--bs-breadcrumb-divider: '>'; --bs-breadcrumb-divider-color: white;" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")"><i class="fa-solid fa-house"></i></a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Transaction")">transaction</a></li>
        <li class="breadcrumb-item active " aria-current="page">Add/Edit</li>
    </ol>
</nav>



<div class="row">
    <!-- Left Side: Form -->
    <div class="col-md-7">
        <div class="widget p-4">
            <form asp-action="AddOrEdit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="TransactionId" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Category Dropdown -->
                <div class="mb-3">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <!-- Amount -->
                <div class="mb-3">
                    <label asp-for="Amount" class="control-label"></label>
                 @*    <input asp-for="Amount" class="form-control" placeholder="Enter amount..." /> *@
                    <input asp-for="Amount" class="form-control" placeholder="Enter amount..." onfocus="if (this.value === '0.00') this.value=''" />

                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <!-- Note -->
                <div class="mb-3">
                    <label asp-for="Note" class="control-label"></label>
                    <input asp-for="Note" class="form-control" placeholder="Optional note..." />
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>

                <!-- Date -->
                <div class="mb-3">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" type="date" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="text-end">
                    <input type="submit" value="@(Model.TransactionId == 0 ? "Submit" : "Update")" class="btn btn-success px-4" />
                </div>
            </form>
        </div>
    </div>

    <!-- Right Side: Icon Block -->
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center" style="background-color: #212b36;">
            <i class="fa-solid fa-money-bill-wave fa-2xl text-white"></i>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}






































